     xmlns:kml="http://www.opengis.net/kml/2.2"
     xmlns:atom="http://www.w3.org/2005/Atom">
  <Document>
    <name>Capital of USA</name>

    <Style id="custom_pin">
      <IconStyle>
        <scale>1.2</scale>
        <Icon>
          <href>http://maps.google.com/mapfiles/kml/paddle/red-circle.png</href>
        </Icon>
      </IconStyle>
      <BalloonStyle>
        <bgColor>ffffffff</bgColor>
        <text><![CDATA[
          <div style="width:500px; padding:20px; font-family:sans-serif; text-align:center; font-size:18px;">
            <h2 style="font-size:26px; margin-bottom:15px; font-weight:bold; color:#000;">Washington, D.C.</h2>
